---
name: gateway_request_form
resource: modules/payments/gateway_request
resource_owner: anyone
authorization_policies:
  - modules/payments/validate_signature
fields:
  config:
    property_options:
      virtual: true
  signature_properties:
    property_options:
      virtual: true
  properties:
    request_type:
    gateway:
    data:
    response:
    request_errors:

redirect_to: >
  {%- if form.properties.request_errors != blank -%}
    {{ form.config.error_path | default: context.params.current_path }}
  {%- else -%}
    {{ form.config.success_path | default:  context.params.redirect_to | default:  context.params.current_path }}
  {%- endif -%}
flash_notice: "{% if form.properties.request_errors != blank %}{{ form.config.error_message | default: form.properties.request_errors }}{% else %}{{ form.config.success_message }}{% endif %}"
callback_actions: >
default_payload: >
  {% if form %}
    {%- assign data = params.properties_attributes.data -%}
    {%- assign config = params.config -%}
    {%- assign gateway = params.properties_attributes.gateway -%}
    {%- assign gateway_api_template = "modules/" | append: gateway | append: '/' | append: config.request_type -%}
    {%- assign response_parser = "modules/" | append: gateway | append: '/response_mapper/' | append: config.request_type -%}

    {%- graphql response = 'modules/payments/gateway_request', data: data, api_template: gateway_api_template -%}
    {%- parse_json 'response_data' -%}
      {%- include response_parser, gateway_response: response.api_call_send.response, data: data -%}
    {%- endparse_json -%}

    {% if response_data.errors == blank or response_data.errors == empty %}
      {%- assign form_name = 'modules/payments/' | append: config.request_type | append: '_form' -%}
      {% if config.request_type contains 'delete' %}
        {%- execute_query "modules/payments/delete_customization", form: form_name, id: response_data.id -%}
        {%- assign customization = g.customization_delete %}
      {% elsif response_data.id != blank %}
        {%- execute_query "modules/payments/update_customization", form: form_name, data: response_data, id: response_data.id -%}
        {%- assign customization = g.customization_update %}
      {% else %}
        {%- execute_query "modules/payments/create_customization", form: form_name, data: response_data -%}
        {%- assign customization = g.customization_create %}
      {% endif %}

      {% if config.callback != blank %}
        {%- include config.callback, response: response_data, customization: customization, params: params -%}
      {% endif %}

      {% if 'create_account' contains config.request_type %}
        {%- assign callback_name = 'modules/' | append: gateway | append: '/callbacks/' | append: config.request_type -%}
        {%- include callback_name, response: response_data, customization: customization, params: params -%}
      {% endif %}

      {
        "properties_attributes": {
          "response": "{{ response.api_call_send.response.body | replace: '"', '\"' }}"
        }
      }
    {% else %}
      {
        "properties_attributes": {
          "request_errors": {{ response_data.errors | json }}
         }
      }
    {% endif %}
  {% endif %}
---
{%- include 'modules/stripe/shared/api_credentials' -%}
{%- assign gateway = config.gateway | default: context.exports.payments.gateway_name -%}
{%- assign request_type = config.request_type | default: request_type -%}
{%- assign gateway_template = config.gateway_template -%}
{%- assign data_attribute = form_builder.fields.properties.data.name -%}

{% if gateway_template == blank %}
  {%- assign gateway_template = "modules/" | append: gateway | append: '/templates/' | append: request_type -%}
{% endif %}

{%- capture "signature" -%}
{% include 'modules/payments/shared/calculate_signature',
  data: data,
  config: config
%}
{%- endcapture -%}

{% form html-class: @request_type %}
  <input type="hidden" name="current_path" value="{{ context.location.href }}" />
  <input type="hidden" name="signature" value="{{ signature }}" />
  <input type="hidden" name="{{ form_builder.fields.properties.gateway.name }}" value="{{ gateway }}" />
  <input type="hidden" name="{{ form_builder.fields.properties.request_type.name }}" value="{{ request_type }}" />
  {%- for property in data -%}
    <input type="hidden"
      name="{{ form_builder.fields.signature_properties.name }}[]" value="{{ property.first}}">
    <input
      type="hidden"
      name="{{ data_attribute }}[{{ property.first }}]"
      value="{{ property.last }}"
      data-{{ property.first }}="{{ property.last }}"
    />
  {%- endfor -%}

  {%- for property in config -%}
    <input
      type="hidden"
      name="{{ form_builder.fields.config.name  }}[{{ property.first }}]"
      value="{{ property.last }}"
    />
  {%- endfor -%}

  {%- include gateway_template, config: config -%}
{% endform %}
