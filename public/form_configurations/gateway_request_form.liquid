---
name: gateway_request_form
resource: modules/payments/gateway_request
resource_owner: anyone
fields:
  success_message:
    property_options:
      virtual: true
  properties:
    request_type:
    gateway:
    data:
    response:
    request_errors:
flash_notice: "{% if form.properties.request_errors != blank %}{{ form.properties.request_errors }}{% else %}{{ form.success_message }}{% endif %}"
callback_actions: >
default_payload: >
  {% if form %}
    {%- assign request = params.properties_attributes -%}
    {%- assign gateway = request.gateway | default: context.exports.payments.gateway_name -%}
    {%- assign gateway_api_template = "modules/" | append: gateway | append: '/' | append: request.request_type -%}

    {%- execute_query 'modules/payments/gateway_create', result_name: 'response', data: request.data, gateway_template: gateway_api_template -%}
    {%- assign response_parser = "modules/" | append: gateway | append: '/response_mapper/' | append: request.request_type -%}
    {%- parse_json 'response_data' -%}
      {%- include response_parser, gateway_response: response.api_call_send.response, data: request.data -%}
    {%- endparse_json -%}

    {% if response_data.errors == blank or response_data.errors == empty %}
      {%- assign form_name = 'modules/payments/' | append: request.request_type | append: '_form' -%}
      {% if request.request_type contains 'delete' %}
        {%- execute_query "modules/payments/delete_customization", form: form_name, id: response_data.id -%}
        {%- assign customization = g.customization_delete %}
      {% else %}
        {%- execute_query "modules/payments/create_customization", form: form_name, data: response_data -%}
        {%- assign customization = g.customization_create %}
      {% endif %}

      {%- assign callback_name = 'modules/' | append: gateway | append: '/callbacks/' | append: request.request_type -%}
      {%- query_graph 'modules/payments/find_partial', path: callback_name -%}
      {% if g.admin_liquid_partials.results.first.id %}
        {%- include callback_name, response: response_data, customization: customization, params: params -%}
      {% endif %}

      {
        "properties_attributes": {
          "response": "OK"
        }
      }
    {% else %}
      {% log response_data.errors, type: "errors" %}
      {
        "properties_attributes": {
          "request_errors": {{ response_data.errors | json }}
         }
      }
    {% endif %}
  {% endif %}
---
{%- assign gateway = context.exports.payments.gateway_name -%}
{%- assign gateway_template = "modules/" | append: gateway | append: '/templates/' | append: request_type -%}
{%- include gateway_template, config: config -%}
