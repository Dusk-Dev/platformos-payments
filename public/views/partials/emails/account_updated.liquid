{% assign user_id_string = form.user_id | append: '' %}
{% graphql account = "modules/payments/get_accounts_by_external_id",
  external_id: user_id_string
  | dig: "customizations", "results"
  | last
%}

{% if account.state == "verified" %}
  Congratulations, your merchant account is now verified.
{% else %}
  Looks like we need additional information in order to verify your merchant account.
{% endif %}
